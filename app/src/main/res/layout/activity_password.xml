<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PasswordActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_button3"
                android:layout_width="22.9dp"
                android:layout_height="24dp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="24dp"
                android:clickable="true"
                android:src="@drawable/array_back" />

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="600"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/back_button3"
                android:layout_marginLeft="15.23dp"
                android:layout_marginRight="54.51dp"
                android:layout_toRightOf="@+id/back_button3"
                android:text="Поменять пароль"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:fontFamily="@font/open_sans"
            android:textFontWeight="600"
            android:textColor="#646468"
            android:text="Текущий пароль"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/current_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginTop="8dp"
            android:text=""
            android:lineHeight="24dp"
            android:textFontWeight="400"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="Новый пароль"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans"
            android:textFontWeight="600"
            android:textColor="#646468"/>

        <EditText
            android:id="@+id/new_pass"
            android:layout_width="match_parent"
            android:layout_height="24pt"
            android:layout_below="@+id/text2"
            android:layout_marginTop="8dp"
            android:text=""

            android:textFontWeight="400"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="Подтвердите пароль"
            android:textSize="12sp"

            android:fontFamily="@font/open_sans"
            android:textFontWeight="600"
            android:textColor="#646468"/>

        <EditText
            android:id="@+id/new_pass2"
            android:layout_width="match_parent"
            android:layout_height="24pt"
            android:layout_below="@+id/text3"
            android:layout_marginTop="8dp"
            android:text=""
            android:textFontWeight="400"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/confirm"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#0099FF"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="64dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подтвердить"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textFontWeight="700"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>