<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="22.9dp"
                android:layout_height="24dp"
                android:id="@+id/back_button2"
                android:src="@drawable/array_back"
                android:layout_marginLeft="24dp"
                android:clickable="true"
                android:layout_marginVertical="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textFontWeight="600"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:layout_toRightOf="@+id/back_button2"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/back_button2"
                android:layout_marginLeft= "15.23dp"
                android:layout_marginRight="54.51dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/change_password"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Поменять пароль"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="400"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft= "15.23dp"
                android:layout_marginRight="54.51dp"/>
            <ImageView
                android:layout_width="22.29dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:layout_alignBottom="@+id/icon"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/notifications"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="Push-уведомления"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft= "15.23dp"
                android:layout_marginRight="54.51dp"/>
            <Switch
                android:layout_width="51dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="23dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>