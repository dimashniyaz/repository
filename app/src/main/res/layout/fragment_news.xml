<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragment_news"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity"
    android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/diary"
                android:layout_marginEnd="24dp"
                android:layout_gravity="right"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:lineHeight="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="400"
                android:text="Сентябрь, 19"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="26dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="24dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:scaleX="1.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/grant"
                        android:id="@+id/ad"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ad"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:lineHeight="16dp"
                        android:text="Ми Lion ББО түлектерінің жеткен жетістіктері - біз үшін бір мақтаныш..."
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="12dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:lineHeight="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="400"
                android:text="Сентябрь, 8"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="26dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ақтөбе қаласы Жубанов университетінде Шартты оқу мүмкіндігі қарастырылған."
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:lineHeight="16dp"
                    android:layout_marginHorizontal="16dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Август, 21"
                android:textSize="14sp"
                android:lineHeight="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textFontWeight="400"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="26dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="141dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:lineHeight="16dp"
                    android:text="Ақтөбе қаласы Жубанов университетінде Шартты оқу мүмкіндігі қарастырылған."
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>